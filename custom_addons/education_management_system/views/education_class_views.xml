<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="education_class_list_view">
        <field name="name">Education Class List View</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="class_department"/>
                <field name="homeroom_teacher"/>
                <field name="total_student"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="education_class_form_view">
        <field name="name">Education Class Form View</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="teacher_id"/>
                        <field name="class_department"/>
                        <field name="homeroom_teacher"/>
                        <field name="total_student"/>
                    </group>
                    <notebook>
                        <page string="Siswa Kelas   ">
                            <field name="student_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="student_id"/>
                                    <field name="gender"/>
                                    <field name="student_phone_number"/>
                                    <field name="student_email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="education_class_action">
        <field name="name">Education Class</field>
        <field name="res_model">education.class</field>
        <field name="view_mode">list,form</field>
    </record>
    
  </data>
</odoo>