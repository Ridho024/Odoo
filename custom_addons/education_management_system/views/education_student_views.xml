<odoo>

    <data>

        <record model="ir.ui.view" id="education_student_list_view">
            <field name="name">Education Student List</field>
            <field name="model">education.student</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="birth_date"/> 
                    <field name="student_id"/>
                    <field name="class_id"/>
                    <field name="parent_name"/>
                    <field name="contact"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="education_student_form_view">
            <field name="name">Education Student Form</field>
            <field name="model">education.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="birth_date"/>
                            <field name="student_id"/>
                            <field name="class_id"/>
                            <field name="parent_name"/>
                            <field name="contact"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="education_student_action">
            <field name="name">Education Student</field>
            <field name="res_model">education.student</field>
            <field name="view_mode">list,form</field>
        </record>
        
    </data>
</odoo>