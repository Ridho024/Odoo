<odoo>
    <data>
    
        <record model="ir.ui.view" id="education_teacher_list_view">
            <field name="name">Education Teacher List View</field>
            <field name="model">education.teacher</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="teacher_image" />
                    <field name="id_card" />
                    <field name="employement_id"/>
                    <field name="gender"/>
                    <field name="phone_number" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="position" optional="show"/>
                    <field name="employement_status" optional="show"/>
                    <!-- Optional Fields -->
                    <field name="employement_rank" optional="hide"/>
                    <field name="entry_date" optional="hide"/>
                    <field name="end_date" optional="hide"/>
                </list>
            </field>
        </record>
    
        <record model="ir.ui.view" id="education_teacher_form_view">
            <field name="name">Education Teacher Form View</field>
            <field name="model">education.teacher</field>
            <field name="arch" type="xml">
                <form string="Teacher Record">
                    <sheet>
                        <group>
                            <group><h1><field name="name" placeholder="Nama Guru" nolabel="0"/></h1></group>
                            <group><field name="teacher_image" widget="image" class="oe_avatar" nolabel="1"/></group>
                        </group>
                        <notebook>
                            <page string="Data Pribadi">
                                <group>
                                    <field name="id_card"/>
                                    <field name="employement_id"/>
                                    <field name="gender"/>
                                    <field name="birth_date"/>
                                    <field name="phone_number"/>
                                    <field name="email"/>
                                    <field name="address"/>
                                    <field name="postcal_code"/>
                                </group>
                            </page>
                            <page string="Data Kepegawaian">
                                <group>
                                    <field name="unique_id"/>
                                    <field name="position"/>
                                    <field name="entry_date"/>
                                    <field name="end_date"/>
                                    <field name="employement_status"/>
                                    <field name="employement_rank"/>
                                    <field name="basic_salary"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="education_teacher_action">
            <field name="name">Education Teacher</field>
            <field name="res_model">education.teacher</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>